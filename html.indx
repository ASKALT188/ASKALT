    <script>
        // بيانات المنتج
        const product = {
            id: 1,
            name: "اسكربت فايف إم مميز من فكرتك",
            description: "يتم تحديد سعر على حسب طلبك",
            price:0,
            image: "https://images.unsplash.com/photo-1563013544-824ae1b704d3?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=600&q=80"
        };

        // عناصر DOM
        const cartIcon = document.getElementById('cartIcon');
        const cartModal = document.getElementById('cartModal');
        const closeCart = document.getElementById('closeCart');
        const cartItems = document.getElementById('cartItems');
        const cartCount = document.getElementById('cartCount');
        const cartTotal = document.getElementById('cartTotal');
        const checkoutBtn = document.getElementById('checkoutBtn');
        const orderForm = document.getElementById('orderForm');
        const orderFormElement = document.getElementById('orderFormElement');
        const notification = document.getElementById('notification');
        const whatsappNotification = document.getElementById('whatsappNotification');
        const closeNotification = document.getElementById('closeNotification');

        // سلة التسوق
        let cart = [];
        
        // إضافة منتج إلى السلة
        function addToCart(productId) {
            const existingItem = cart.find(item => item.id === productId);
            
            if (existingItem) {
                existingItem.quantity++;
            } else {
                cart.push({...product, quantity: 1});
            }
            
            updateCart();
            showNotification(`تم إضافة ${product.name} إلى السلة`);
            cartModal.style.display = 'flex';
        }
        
        // تحديث السلة
        function updateCart() {
            cartCount.textContent = cart.reduce((total, item) => total + item.quantity, 0);
            
            cartItems.innerHTML = '';
            let total = 0;
            
            cart.forEach(item => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                
                const cartItem = document.createElement('div');
                cartItem.className = 'cart-item';
                cartItem.innerHTML = `
                    <div class="item-info">
                        <div class="item-name">${item.name}</div>
                        <div class="item-price">${item.price} ر.س</div>
                    </div>
                    <div class="item-quantity">
                        <span class="remove-item" onclick="removeFromCart(${item.id})"><i class="fas fa-trash"></i></span>
                        <button class="quantity-btn" onclick="changeQuantity(${item.id}, -1)">-</button>
                        <span class="quantity">${item.quantity}</span>
                        <button class="quantity-btn" onclick="changeQuantity(${item.id}, 1)">+</button>
                    </div>
                `;
                cartItems.appendChild(cartItem);
            });
            
            cartTotal.textContent = `${total} ر.س`;
        }
        
        // تغيير كمية المنتج
        function changeQuantity(productId, change) {
            const item = cart.find(item => item.id === productId);
            if (item) {
                item.quantity += change;
                if (item.quantity <= 0) {
                    cart = cart.filter(i => i.id !== productId);
                }
                updateCart();
            }
        }
        
        // إزالة منتج من السلة
        function removeFromCart(productId) {
            cart = cart.filter(item => item.id !== productId);
            updateCart();
            showNotification('تم إزالة المنتج من السلة');
        }
        
        // إظهار إشعار
        function showNotification(message) {
            notification.textContent = message;
            notification.style.display = 'block';
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }
        
        // إظهار إشعار الواتساب
        function showWhatsappNotification() {
            whatsappNotification.style.display = 'block';
        }
        
        // إرسال الطلب
        function submitOrder(event) {
            event.preventDefault();
            
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const address = document.getElementById('address').value;
            
            // حفظ الطلب في localStorage (محاكاة لقاعدة البيانات)
            const order = {
                name,
                email,
                phone,
                address,
                cart,
                total: cart.reduce((total, item) => total + (item.price * item.quantity), 0),
                date: new Date().toLocaleString('ar-SA')
            };
            
            let orders = JSON.parse(localStorage.getItem('orders')) || [];
            orders.push(order);
            localStorage.setItem('orders', JSON.stringify(orders));
            
            // إظهار رسالة النجاح
            showNotification('تم استلام طلبك بنجاح! سيتم التواصل معك قريباً.');
            
            // إظهار إشعار الواتساب
            showWhatsappNotification();
            
            // إعادة تعيين السلة والنموذج
            cart = [];
            updateCart();
            orderForm.style.display = 'none';
            cartModal.style.display = 'none';
            orderFormElement.reset();
            
            console.log('تفاصيل الطلب:', order);
        }
        
        // إعداد event listeners
        cartIcon.addEventListener('click', () => {
            cartModal.style.display = 'flex';
        });
        
        closeCart.addEventListener('click', () => {
            cartModal.style.display = 'none';
        });
        
        checkoutBtn.addEventListener('click', () => {
            if (cart.length > 0) {
                orderForm.style.display = 'block';
            } else {
                showNotification('السلة فارغة. أضف منتجات أولاً.');
            }
        });
        
        orderFormElement.addEventListener('submit', submitOrder);
        
        closeNotification.addEventListener('click', () => {
            whatsappNotification.style.display = 'none';
        });
        
        // إغلاق السلة عند النقر خارجها
        window.addEventListener('click', (event) => {
            if (event.target === cartModal) {
                cartModal.style.display = 'none';
            }
        });
        
        // تحميل الصفحة
        window.addEventListener('DOMContentLoaded', () => {
            updateCart();
        });
    </script>
